{
    "name": "robust-tools/resala",
    "description": "Laravel SMS Gateway Integration Package",
    "keywords": [
        "robust-tools",
        "sms",
        "resala"
    ],
    "homepage": "https://github.com/RobustaStudio/Resala",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mohamed AbdElaziz",
            "email": "mohabdelaziz95@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-dom": "*",
        "ext-simplexml": "*",
        "guzzlehttp/guzzle": "*",
        "illuminate/support": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "orchestra/testbench": "*",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "RobustTools\\SMS\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RobustTools\\SMS\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "RobustTools\\SMS\\SMSServiceProvider"
            ],
            "aliases": {
                "SMS": "RobustTools\\SMS\\Facades\\SMS"
            }
        }
    }
}
